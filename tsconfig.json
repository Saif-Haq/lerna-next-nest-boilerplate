{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "baseUrl": ".",
    "paths": {
      "@panoptic-shared": ["packages/shared/lib"],
      "@panoptic-shared/*": ["packages/shared/lib/*"],
      "@labs-comp": ["packages/shared/lib/components/ui"],
      "@labs-comp/*": ["packages/shared/lib/components/ui/*"],
      "@labs-config": ["packages/shared/lib/config"],
      "@labs-config/*": ["packages/shared/lib/config/*"],
      "@labs-types": ["packages/shared/lib/types"],
      "@labs-types/*": ["packages/shared/lib/types/*"],
      "@labs-constants": ["packages/shared/lib/constants"],
      "@labs-constants/*": ["packages/shared/lib/constants/*"]
    },
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
